# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                                                  controllers.Application.index
GET           /admin                                                             controllers.Application.admin

#anglarjs template pages
GET           /templates/*file                                                   controllers.Static.at(path="/public/templates", file)
GET           /*college/templates/*file                                          controllers.Static.ignoreCollege(path="/public/templates", file, college)

GET           /kindergarten/:kg/news                                             controllers.NewsController.index(kg: String)
GET           /kindergarten/:kg/news/:newsId                                     controllers.NewsController.show(kg: String, newsId: Long)
POST          /kindergarten/:kg/news/:newsId                                     controllers.NewsController.update(kg: String, newsId: Long)
DELETE          /kindergarten/:kg/news/:newsId                                     controllers.NewsController.deleteOne(kg: String, newsId: Long)
GET           /kindergarten/:kg/admin/:adminId/news                              controllers.NewsController.indexWithNonPublished(kg: String, adminId: Long)
POST           /kindergarten/:kg/admin/:adminId/news                              controllers.NewsController.create(kg: String, adminId: Long)
POST          /kindergarten/:kg/admin/:adminId/news/:newsId                      controllers.NewsController.adminUpdate(kg: String, adminId: Long, newsId: Long)
DELETE        /kindergarten/:kg/admin/:adminId/news/:newsId                      controllers.NewsController.delete(kg: String, adminId: Long, newsId: Long)

GET           /kindergarten/:kg/parent/:parentId/news                            controllers.ReadingNewsController.index(kg: String, parentId: Long)
POST          /kindergarten/:kg/parent/:parentId/news/:newsId                    controllers.ReadingNewsController.create(kg: String, parentId: Long, newsId: Long)

GET           /kindergarten/:kg/admin/:adminId/news_reading_count/:newsId        controllers.ReadingNewsController.countReading(kg: String, adminId: Long, newsId: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                                                      controllers.Assets.at(path="/public", file)
