# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                     controllers.Application.index

#anglarjs template pages
GET         /templates/*file                                      controllers.Static.at(path="/public/templates", file)
GET         /*college/templates/*file                             controllers.Static.ignoreCollege(path="/public/templates", file, college)

GET         /kindergarten/:kg/news                                controllers.NewsController.index(kg: String)
GET         /kindergarten/:kg/news/:newId                         controllers.NewsController.show(kg: String, newId: Long)

GET         /kindergarten/:kg/parent/:parentId/news               controllers.ReadingNewsController.index(kg: String, parentId: Long)
POST        /kindergarten/:kg/parent/:parentId/news/:newId        controllers.ReadingNewsController.create(kg: String, parentId: Long, newId: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                         controllers.Assets.at(path="/public", file)
